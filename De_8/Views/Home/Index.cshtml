
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Action("RenderProduct")

@section scripts{
    <script src="~/Scripts/js/jquery/jquery-2.2.4.min.js"></script>
    <script>
        $('.id_sp').click(function (e) {
            var id = $(this).attr('id');
            $.ajax({
                type: "GET",
                url: "Home/RenderProductByCatId",
                data: { CatId: id },
                success: function (response) {
                    $('div.content').html(response);
                },
                error: function () {
                    alert("error");
                }
            });
        });
    </script>
}
